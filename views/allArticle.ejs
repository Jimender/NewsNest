<script>
    $(document).ready(function () {
        var owl = $('.owl-carousel'); // Define the owl carousel
        owl.owlCarousel({
            loop: true,
            margin: 10,
            nav: false,
            dots: false,
            responsive: {
                0: {
                    items: 1
                },
                768: {
                    items: 2
                },
                992: {
                    items: 3
                }
            }
        });

        $('.carousel-btn-prev').click(function () {
            owl.trigger('prev.owl.carousel');
        });

        $('.carousel-btn-next').click(function () {
            owl.trigger('next.owl.carousel');
        });
    });
</script>

