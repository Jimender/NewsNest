<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <!-- Owl Carousel CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">

    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100;8..144,500;8..144,600;8..144,800;8..144,1000&display=swap"
        rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;1,500&display=swap"
        rel="stylesheet">
    <link rel="icon" href="/assets/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="/styles/styles.css">

    <title>NewsNest | <%= news.title %>
    </title>
</head>

<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <h2>NewsNest<em>.</em></h2>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/#about">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/subscribe">Pricing</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#footer">Contact Us</a>
                        </li>
                        <% if (loggedIn) { %>
                            <li class="nav-item user-profile d-flex justify-content-center align-items-center">
                                <div class="dropdown">
                                    <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                        <i class="fa-solid fa-user"></i>
                                    </a>
                                    <ul class="dropdown-menu profile-menu p-3">
                                        <li>
                                            <h5>Welcome,&nbsp;<%= username %>
                                            </h5>
                                        </li>
                                        <li><a class="profile-menu--item" href="/logout">Logout</a></li>
                                    </ul>
                                </div>
                            </li>
                            <% } else { %>
                                <li class="nav-item">
                                    <a class="nav-link" href="/login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/signup">Signup</a>
                                </li>
                                <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="article-container">
                    <h2 class="article-title">
                        <%= news.title %>
                    </h2>
                    <p class="article-description">
                        <%= news.description %>
                    </p>
                    <div class="header-image">
                        <img src="<%= news.urlToImage%>" class="article-img mx-auto d-block img-fluid" alt="">
                    </div>
                    <p class="article-content">
                        <%= content %>
                    </p>
                </div>
            </div>
            <div class="col-4">
                <div class="miscellaneous-container">
                    <div class="categories-list">
                        <h3 class="categories-heading">Categories</h3>
                        <ul>
                            <li><a href="/categories/business-&-finance" class="categories-title">Business &
                                    Finance</a></li>
                            <li><a href="/categories/crime-&-justice" class="categories-title">Crime & justice</a>
                            </li>
                            <li><a href="/categories/technology" class="categories-title">Technology</a></li>
                            <li><a href="/categories/politics" class="categories-title">Politics</a></li>
                            <li><a href="/categories/sports" class="categories-title">Sports</a></li>
                            <li><a href="/categories/medicine-&-health" class="categories-title">Medicine & Health</a>
                            </li>
                            <li><a href="/categories/entertainment" class="categories-title">Entertainement</a></li>
                            <li><a href="/categories/culture-&-lifestyle" class="categories-title">Culture &
                                    Lifestyle</a></li>
                            <li><a href="/categories/education" class="categories-title">Education</a></li>
                        </ul>
                    </div>
                    <div class="card">
                        <h5 class="card-header">More Articles</h5>
                        <% for (let i=0; i < 3; i++) { %>
                            <div class="card-body">
                                <div class="card-image">
                                    <img src="<%= otherNews[i].urlToImage%>" alt="" class="featured-image">
                                </div>
                                <h5 class="card-title">
                                    <%= otherNews[i].title %>
                                </h5>
                                <p class="card-text">
                                    <%= otherNews[i].description %>
                                </p>
                                <a href="/article/<%= encodeURIComponent(otherNews[i].title) %>"
                                    class="btn btn--read-article">Read Full Article</a>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <footer id="footer" class="text-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>NewsNest.</h3>
                    <p>Your trusted source for the latest news and updates.</p>
                </div>
                <div class="col-md-3">
                    <h4>Quick Links</h4>
                    <ul class="list-unstyled footer-nav">
                        <li><a href="/">Home</a></li>
                        <li><a href="/#about">About Us</a></li>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/signup">Signup</a></li>
                        <li><a href="#footer">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4>Contact</h4>
                    <address>
                        123 News Street<br>
                        News City, 12345<br>
                        Email: info@newsnest.com<br>
                        Phone: (123) 456-7890
                    </address>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script>
        function formatArticleContent() {
            const element = document.querySelector('.article-content');
            if (element) {
                const text = element.textContent;
                const formattedText = paragraphed(text);
                element.innerHTML = formattedText;
            }
        }

        function paragraphed(text) {
            const sentences = text.split(/(\.|!|\?)(?=\s)/g);
            const sentencesPerBlock = 10;
            let result = '&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;';
            for (let i = 0; i < sentences.length; i++) {
                result += sentences[i];
                if ((i + 1) % sentencesPerBlock === 0) {
                    result += '<br><br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;';
                }
            }
            return result;
        }

        formatArticleContent();
    </script>

</body>

</html>